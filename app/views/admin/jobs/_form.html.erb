<div class="form-box">
  <%= simple_form_for [:admin, @job]  do |f| %>
  <div class="form-group">
    <%= f.input :title, :label => "概念名称", input_html: { class: "form-control"}, placeholder: "注意力/落后/抱怨/贵人..." %>
    <%= f.input :description, :label => "概念描述", input_html: { class: "form-control"} %>
    <%= f.input :company_name, :label => "践行标准", input_html: { class: "form-control"} %>
    <% if @job.category_name? %>
    <%= f.input :category_name, :label => "践行城市", :collection => ["北京", "上海", "杭州", "纽约", "东京"], as: :radio_buttons, :checked => @job.category_name %>
  <% else %>
    <%= f.input :category_name, :label => "践行城市", :collection => ["北京", "上海", "杭州", "纽约", "东京"], as: :radio_buttons, :checked => "城市" %>
    <% end %>
    <%= f.input :wage_lower_bound, :label => '践行时限' do %>
    <%= f.input_field :wage_lower_bound, :as => :string, placeholder: '最低时长' %>
    天 ~
    <%= f.input_field :wage_upper_bound, :as => :string, placeholder: '最高时长' %>
    天
    <% end %>

    <%= f.input :contact_email, :label => "联系邮箱", input_html: { class: "form-control"} %>

  </div>
  <%= f.submit "提交", class: "btn btn-success", data: { disable_with: "Submitting..." } %>
  <% end %>
</div>
